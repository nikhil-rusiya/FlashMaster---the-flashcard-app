<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC"
    tools:context=".Add_FlashCard">

    <EditText
        android:id="@+id/editques"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="156dp"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Question"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editdesp"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Description"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/editques"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editques"
        app:layout_constraintTop_toBottomOf="@+id/editques" />

    <Button
        android:id="@+id/setbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:backgroundTint="@color/one"
        android:fontFamily="@font/poppins_semibold"
        android:text="Set Card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAnsDesp" />

    <EditText
        android:id="@+id/editVideolink"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Video Link (optional)"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/editdesp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editdesp"
        app:layout_constraintTop_toBottomOf="@+id/editdesp" />

    <EditText
        android:id="@+id/editAnswer"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Answer"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/editVideolink"
        app:layout_constraintStart_toStartOf="@+id/editVideolink"
        app:layout_constraintTop_toBottomOf="@+id/editVideolink" />

    <EditText
        android:id="@+id/editAnsDesp"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Answer description"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/editAnswer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editAnswer"
        app:layout_constraintTop_toBottomOf="@+id/editAnswer" />

    <ImageView
        android:id="@+id/setTime"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/timer" />

</androidx.constraintlayout.widget.ConstraintLayout>